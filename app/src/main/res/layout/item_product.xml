<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="176dp"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp">

    <first.app.nikestore.view.NikeImageView
        app:roundedCornerRadius="12dp"
        android:id="@+id/productIv"
        android:layout_width="0dp"
        android:layout_height="189dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:textSize="14sp"
        android:gravity="end|center_horizontal"
        android:id="@+id/productTitleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        tools:text="TextView"
        android:ellipsize="end"
        android:minLines="2"
        android:maxLines="2"
        android:textColor="?colorOnSurface"
        app:layout_constraintEnd_toEndOf="@+id/productIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productIv" />

    <TextView
        android:textSize="12sp"
        android:textColor="?android:textColorSecondary"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:id="@+id/periviousPriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/productTitleTv"
        app:layout_constraintTop_toBottomOf="@+id/productTitleTv" />

    <TextView
        android:id="@+id/currentPriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="@+id/periviousPriceTv"
        app:layout_constraintTop_toBottomOf="@+id/periviousPriceTv" />

    <ImageView
        android:id="@+id/favoriteBtn"
        android:layout_width="32dp"
        android:background="@drawable/background_favorite"
        android:layout_height="32dp"
        android:scaleType="centerInside"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_favorites" />
</androidx.constraintlayout.widget.ConstraintLayout>